<Window x:Class="MCIFramework.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="768" Width="1280"
        ResizeMode="CanResizeWithGrip">

    <Grid Margin="0,0,0,30">
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="40,206,40,0" Grid.ColumnSpan="2" />
        <ComboBox HorizontalAlignment="Left" Margin="40,157,0,0" VerticalAlignment="Top" Width="205" Height="31"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="298,157,0,0" VerticalAlignment="Top" Width="91" Background="#FF3773C9" Height="31" Foreground="White" BorderBrush="#FF3773C9" BorderThickness="0"/>
        <Label Content="Assessment Dashboard" HorizontalAlignment="Left" Margin="40,98,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.684,-1.192" FontSize="24" FontFamily="Arial"/>
        <WrapPanel x:Name="Wrap_Panel" HorizontalAlignment="Left" Height="100" Margin="427,-123,0,0" VerticalAlignment="Top" Width="100"/>
        <Canvas HorizontalAlignment="Left" Height="40" Margin="0,0,0,0" VerticalAlignment="Top" Width="1270" Background="#FF3773C9" Grid.ColumnSpan="2"/>
        <Label Content="Digital Comms Diagnostics" HorizontalAlignment="Left" Margin="40,3,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.684,-1.192" FontSize="20"  Foreground="#FFFFFF" FontFamily="Arial"/>


    </Grid>
</Window>
